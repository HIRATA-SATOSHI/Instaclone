<p id="notice"><%= notice %></p>

<h1>Pictures</h1>
<br>
<table class="container">
  <thead>
    <tr class="row">
      <th class="col-md-4">Image</th>
      <th class="col-md-4">Content</th>
      <th class="col-md-4">Contributor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr class="row">
        <td class="col-md-4"><%= image_tag picture.image.url %></td>
        <td class="col-md-4"><%= picture.content %></td>
        <td class="col-md-4"><%= picture.user.name %></td>
        <td><button type="button" class="btn btn-info btn-sm"><%= link_to 'Show', picture %></button></td>
        <td><button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit', edit_picture_path(picture) %></button></td>
        <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-info"><%= link_to 'New Picture', new_picture_path %></button>
