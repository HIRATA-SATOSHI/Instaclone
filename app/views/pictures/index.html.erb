<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><button type="button" class="btn btn-primary btn-sm"><%= link_to 'Show', picture %></button></td>
        <td><button type="button" class="btn btn-success btn-sm"><%= link_to 'Edit', edit_picture_path(picture) %></button></td>
        <td><button type="button" class="btn btn-danger btn-sm"><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-info"><%= link_to 'New Picture', new_picture_path %></button>
